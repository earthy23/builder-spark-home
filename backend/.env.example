# Database
DATABASE_URL="postgresql://username:password@localhost:5432/uec_launcher?schema=public"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="24h"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-this-in-production"
JWT_REFRESH_EXPIRES_IN="7d"

# Server Configuration
PORT=5000
NODE_ENV="development"
CORS_ORIGIN="http://localhost:3000"

# Redis Configuration (for sessions and caching)
REDIS_URL="redis://localhost:6379"

# Email Configuration (for user verification and notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
FROM_EMAIL="noreply@ueclauncher.com"
FROM_NAME="UEC Launcher"

# File Upload Configuration
MAX_FILE_SIZE="10MB"
UPLOAD_PATH="uploads"
ALLOWED_FILE_TYPES="jpg,jpeg,png,gif,webp,pdf,txt,doc,docx"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET="your-super-secret-session-key-change-this-in-production"

# Logging
LOG_LEVEL="info"
LOG_FILE_PATH="logs/app.log"

# Game Clients
CLIENTS_PATH="../public/client"
DEFAULT_CLIENT_TIMEOUT=30000

# Admin Configuration
DEFAULT_ADMIN_USERNAME="admin"
DEFAULT_ADMIN_EMAIL="admin@ueclauncher.com"
DEFAULT_ADMIN_PASSWORD="admin123"

# Analytics
ANALYTICS_RETENTION_DAYS=90

# Socket.io Configuration
SOCKET_CORS_ORIGIN="http://localhost:3000"
